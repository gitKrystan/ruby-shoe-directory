<h1>ADMIN</h1>

<div class="row">
  <!-- Stores -->
  <div class="col-sm-6">
    <form class="form-inline" action="/stores" method="post">
      <div class="input-group">
        <input type="text" name="store_name" class="form-control" placeholder="Name">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Add Store</button>
        </span>
      </div><!-- /input-group -->
    </form>

    <% if @stores.any? %>
      <ul class="nav nav-pills nav-stacked">
        <% @stores.each do |store| %>
          <li><%= store.name %></li>
        <% end %>
      </ul>
    <% end %>
  </div><!-- Stores -->
</div>
